{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
    }

    .card {
        background: #f8f8f8;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 16px;
        width: 200px;
        text-align: center;
        transition: transform 0.2s;
    }

    .card:hover {
        transform: scale(1.05);
    }

    .card a {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .card h3 {
        margin: 0;
        font-size: 1.2em;
    }

    .card p {
        margin: 0.5em 0 0;
        color: #555;
    }
</style>

<h1>Nos Produits</h1>

<div class="card-container">
    {% for product in products %}
        <div class="card">
            <a href="{{ path('product_show', { id: product.id }) }}">
                <h3>{{ product.name }}</h3>
                <p>{{ product.price }} €</p>
            </a>
        </div>
    {% endfor %}
</div>

{% if nameForm is defined %}
    <h2>Modifier mon prénom et mon nom</h2>

    {{ form_start(nameForm) }}
        <div>
            {{ form_label(nameForm.firstName) }}
            {{ form_widget(nameForm.firstName) }}
            {{ form_errors(nameForm.firstName) }}
        </div>
        <div>
            {{ form_label(nameForm.lastName) }}
            {{ form_widget(nameForm.lastName) }}
            {{ form_errors(nameForm.lastName) }}
        </div>
        <button type="submit">Enregistrer</button>
    {{ form_end(nameForm) }}
{% endif %}


{% endblock %}
